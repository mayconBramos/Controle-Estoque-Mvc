@model IEnumerable<Gestao_Estoque_Mvc.Models.Entrada>
@{
    ViewData["Title"] = "Index";
}
<!--pagina principal onde mostra as listas-->
@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success close-alert mt-2" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger  close-alert mt-2" role="alert">
    @TempData["MensagemErro"]
</div>

}


<h1 class="text-center mt-4">Entradas no Estoque</h1>

<p>
    <a role="button" class="btn col-12 text-white" asp-action="Create" style="background-color: #7b67eb"><strong>Adicionar Produto</strong> </a>
</p>
<hr />

<table class="table" id="tabela_produtos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recebimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Validade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recebimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validade)
            </td>
            <td>
                <a role="button" class="btn btn-outline-primary px-2 py-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a role="button" class="btn btn-outline-danger  px-2 py-1" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready( function () {

            $('#tabela_produtos').DataTable({

                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }

            }); 
                
    } );
    </script>
}
